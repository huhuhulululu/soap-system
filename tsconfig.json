{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["ES2018", "ES2019", "ES2020", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": ".",
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "types": ["node", "jest"]
  },
  "include": [
    "src/**/*.ts",
    "parsers/**/*.ts",
    "scripts/**/*.ts",
    "server/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "frontend",
    "parsers/optum-note/checker/__tests__/text-rules.test.ts",
    "parsers/optum-note/parser.test.ts",
    "scripts/playwright/**/*",
    "server/services/mdland-login.ts"
  ]
}
